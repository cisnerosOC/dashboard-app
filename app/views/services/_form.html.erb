 <%= simple_form_for @service, defaults: { input_html: { class: 'form-group' } } do |f| %>
  <%= f.input :name, input_html: { class: 'form-control'}%>
  <%= f.input :description, as: :text,input_html: { class: 'form-control', rows: "8"} %>
  <%= f.input :price, input_html: { class: 'form-control'}%>
  <%= f.button :submit, input_html: { class: 'btn btn-default'} %>
<% end %>
