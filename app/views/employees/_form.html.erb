<%= simple_form_for @employee,defaults: { input_html: { class: 'form-group' } }  do |f| %>
  <%= f.input :first_name, input_html: { class: 'form-control'} %>
  <%= f.input :last_name, input_html: { class: 'form-control'} %>
  <%= f.input :middle_name, input_html: { class: 'form-control'} %>
  <%= f.input :address, input_html: { class: 'form-control'} %>
  <%= f.input :city, input_html: { class: 'form-control'} %>
  <%= f.input :state, input_html: { class: 'form-control'} %>  
  <%= f.input :zip_code, input_html: { class: 'form-control'} %>
  <%= f.input :phone1, input_html: { class: 'form-control'} %>
  <%= f.input :phone2, input_html: { class: 'form-control'} %>
  <br>
  
  <%= f.button :submit %>
<% end %>