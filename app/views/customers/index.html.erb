<div class ="panel panel-default" ng-app="app"> 
  <div class="panel-heading">
    <span><h1>Customers</h1> Filter <input type="Search" ng-model="query  "></span>
    <button type="button" class="btn btn-default btn-xs"><a href="customers/new">Add new customer</a></button>
  </div>
  <div class = "panel panel-body" ng-controller="customersCtrl">
    <br>
    <br>
    <table class="table table-striped">
      <tr>
        <th ng-click="predicate = 'first_name'; reverse=!reverse"> First Name</th>
        <th ng-click="predicate = 'last_name'; reverse=!reverse">Last Name</th>
        <th>Action</th>
      </tr>
      <tr ng-repeat="customer in customers | orderBy:predicate:reverse | filter:query">
        <td>{{customer.first_name}}</td>
        <td>{{customer.last_name}}</td>
        <td>{{customer.first_name}}</td>
    
      </tr>

    <table>
  </div>
</div>